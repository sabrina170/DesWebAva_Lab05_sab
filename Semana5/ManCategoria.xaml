<Window x:Class="Semana5.ManCategoria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana5"
        mc:Ignorable="d"
        Title="ManCategoria" Height="450" Width="800">
    <Grid>
        <StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Width="150px">ID</Label>
                <Label x:Name="txtID"></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Width="150px">Nombre</Label>
                <TextBox x:Name="txtNombre" Width="200"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Width="150px">Descripcion</Label>
                <TextBox x:Name="txtDescripcion" Width="200"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnGrabar" Click="BtnGrabar_Click">Grabar</Button>
                <Button x:Name="btnCerrar" Click="BtnCerrar_Click">Cerrar</Button>
                <Button x:Name="btnEliminar" Click="BtnEliminar_Click">Eliminar</Button>


            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
